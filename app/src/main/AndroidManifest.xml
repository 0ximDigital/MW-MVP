<?xml version="1.0" encoding="utf-8"?>
<manifest package="oxim.digital.mwmvp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".application.MwMvpApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.welcome.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.single.SingleActivity"/>

        <activity android:name=".ui.fragmented.FragmentHolderActivity"/>

        <activity android:name=".ui.drag.DragAndDropHolderActivity"/>

        <activity android:name=".ui.PictureInPicture.PictureInPictureHolderActivity"
                  android:launchMode="singleTask"
                  android:supportsPictureInPicture="true"/>

    </application>
</manifest>